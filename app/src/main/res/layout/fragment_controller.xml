<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvSelectedSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:text="Selected: Obs 1"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Obstacle selector -->
    <LinearLayout
        android:id="@+id/obstacleGridSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs1"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="1"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs2"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="2"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs3"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="3"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs4"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="4"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs5"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="5"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs6"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="6"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs7"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="7"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnObs8"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="8"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Arena Preview Area (square) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/arenaContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/obstacleGridSmall"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <com.example.sc2079_ay2526s2_grp08.ui.arena.ArenaView
            android:id="@+id/arenaView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:paddingLeft="18dp"
            android:paddingBottom="18dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpad"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnForward"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:text="↑"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:text="←"
                app:layout_constraintTop_toBottomOf="@id/btnForward"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/btnRight"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:text="→"
                app:layout_constraintTop_toBottomOf="@id/btnForward"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:text="↓"
                app:layout_constraintTop_toBottomOf="@id/btnLeft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:text="■"
                app:layout_constraintTop_toBottomOf="@id/btnForward"
                app:layout_constraintStart_toEndOf="@id/btnLeft"
                app:layout_constraintEnd_toStartOf="@id/btnRight"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/infoScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintStart_toEndOf="@id/dpad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/infoPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvConnStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>

                <TextView
                    android:id="@+id/tvNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="13sp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Robot Location"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="6dp"/>

                <TextView
                    android:id="@+id/tvRobotLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X: -, Y: - (Facing: -)"
                    android:textSize="13sp"
                    android:paddingBottom="10dp"/>

                <Button
                    android:id="@+id/btnExplore"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Start Explore"/>

                <Button
                    android:id="@+id/btnFastest"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Fastest Path"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Reset"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
