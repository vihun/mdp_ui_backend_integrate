<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/arenaRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <com.example.sc2079_ay2526s2_grp08.ui.arena.ArenaView
        android:id="@+id/arenaView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/sidePanel"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#F6F6F6">

        <TextView
            android:id="@+id/tvSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obstacle: 1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <GridLayout
            android:id="@+id/gridObstacleBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:useDefaultMargins="true">

            <Button android:id="@+id/btnObs1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="1"/>
            <Button android:id="@+id/btnObs2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="2"/>
            <Button android:id="@+id/btnObs3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="3"/>
            <Button android:id="@+id/btnObs4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="4"/>
            <Button android:id="@+id/btnObs5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="5"/>
            <Button android:id="@+id/btnObs6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="6"/>
            <Button android:id="@+id/btnObs7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="7"/>
            <Button android:id="@+id/btnObs8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="8"/>

        </GridLayout>

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="12sp"
            android:textColor="#555555"
            android:text="Tap to place.\nDrag to move.\nDrag out to remove.\nTap an obstacle to set face." />

    </LinearLayout>

</LinearLayout>
